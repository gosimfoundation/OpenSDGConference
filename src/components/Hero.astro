---
// Components
import Button from "components/Button.astro"

interface Props {
	date?: string,
    location?: string,
    links?: Array<{
        text: string,
        link: string,
        openInNewTab: boolean,
    }>,
}

const { date, location, links } = Astro.props;
---

<section
    class="section section-home-header full-height"
    data-theme-section="dark"
    data-bg-section="header-home"
>

    <div class="overlay overlay-background overlay-background-image">
        <img class="overlay" src="/images/homepage/un-sdg.jpg" alt="UN Sustainable Development Goals" loading="eager" />
        <div class="overlay overlay-gradient-v2" />
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="hero-title">
                    <h1 class="display-title">Open for SDG Conference</h1>
                </div>

                <div class="event-facts">
                    {date &&
                        <p>{date}</p>
                    }

                    {location &&
                        <p>{location}</p>
                    }
                </div>

                <div class="btn-home-wrap">
                    {links?.map((loop) => (
                        <Button
                            text={loop.text}
                            link={loop.link}
                            openInNewTab={loop?.openInNewTab}
                            class="btn light xl btn-hover fade-in-last"
                        />
                    ))}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .hero-title {
        margin-bottom: 2rem;
    }

    .display-title {
        font-size: clamp(2.5rem, 6vw, 5rem);
        font-weight: 700;
        color: white;
        text-align: center;
        line-height: 1.1;
        margin: 0;
        text-transform: uppercase;
        letter-spacing: -0.02em;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    @media (max-width: 768px) {
        .display-title {
            font-size: clamp(2rem, 8vw, 3rem);
        }
    }
</style>