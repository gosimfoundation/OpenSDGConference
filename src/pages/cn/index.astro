---
// Components
import Layout from "layouts/Layout.astro";
import Hero from "components/Hero.astro";
import Intro from "components/Intro.astro";
import Cards from "components/Cards.astro";
import TextAndImageSimple from "components/TextAndImageSimple.astro";
import TextAndSponsors from "components/TextAndSponsors.astro";
import VenueInfo from "components/VenueInfo.astro";
import FeaturedSpeakers from "components/FeaturedSpeakers.astro";
---

<Layout
  title="开放共创·可持续发展大会 | 通过开放协作加速实现可持续发展目标"
  description="开放共创·可持续发展大会汇聚联合国专家、开源社区和创新者，共同探讨开放技术如何推进2030年可持续发展议程。"
  navDarkMode={true}
  navBackground="header-home"
  pageTransitionName="开放共创·可持续发展大会"
>
  <Hero
    date="2025年9月13日"
    location="中国杭州"
    links={[
      {
        text: "活动已结束，感谢参与",
        link: "",
        openInNewTab: false,
      },
      {
        text: "查看议程",
        link: "/cn/agenda",
        openInNewTab: false,
      },
    ]}
  />

  <div
    class="section-wrap"
    id="intro"
    data-theme-section="light"
    data-bg-section="lightgray"
  >
    <Intro>
      <h1
        class="h3 light split-words animate-read mb-4"
        style="font-size:1.5rem; text-align: justify;"
      >
        <b style="display: block; margin-bottom: 2rem;"
          >开放共创·可持续发展大会</b
        >
        开放共创·可持续发展大会汇聚联合国专家、开源社区、标准组织、技术专家、 学术研究专家以及公共和私营部门的创新者，共同应对全球挑战。我们一起探索开放协作
        如何推动联合国可持续发展目标（SDGs）的进展——从气候行动到数字包容。这是一个号召，
        旨在共同创建以人工智能为重点的开源解决方案，建立全球合作，将共同愿景转化为行动。
      </h1>
    </Intro>
  </div>

  <FeaturedSpeakers
    title="特邀演讲嘉宾"
    ctaButton={{
      text: "未来更新其他讲师",
      link: "/cn/speakers",
    }}
  />

  <Cards
    title="大会主题"
    description="探索开源技术如何加速实现特定的可持续发展目标。"
    cards={[
      {
        title: "开放数据促进联合国可持续发展目标",
        description:
          "分享公共医疗数据案例研究，并讨论开放数据倡议以支持全球合作并加速实现联合国可持续发展目标。",
        image: "/icons/collaboration.svg",
      },
      {
        title: "开放政策促进联合国可持续发展目标",
        description:
          "探讨联合国如何有效参与开源社区和项目以加速实现可持续发展目标。会议将重点定义所需的政策、流程和治理机制，以安全、透明和有影响力的方式实现开源贡献。",
        image: "/icons/sovereignty.svg",
      },
      {
        title: "开放科学促进联合国可持续发展目标",
        description:
          "探索如何利用以透明、协作和可访问性为基础的开放科学来加速实现联合国可持续发展目标。",
        image: "/icons/governance.svg",
      },
      {
        title: "未来人工智能促进联合国可持续发展目标",
        description:
          "在联合国可持续发展目标的背景下探索人工智能的未来。我们将共同研究如何设计、部署和治理包容、负责任且与世界最紧迫优先事项相一致的人工智能系统。",
        image: "/icons/aimodels.svg",
      },
      {
        title: "展示与分享",
        description: "展示适合联合国可持续发展目标的示例用例和开源项目。",
        image: "/icons/whitepaper.svg",
      },
    ]}
  />

  <TextAndImageSimple
    title="开源与联合国可持续发展目标"
    text="实现17个可持续发展目标需要可扩展、可负担和包容的数字解决方案。开源项目——从软件和数据集到人工智能模型、标准和内容——构成了联合国所称的数字公共产品的基础。这些共享资源通过允许任何人在已验证技术的基础上构建和本地化，从而解锁创新和公平。数字和新兴技术办公室指出，投资开源软件、开放数据、开放人工智能模型、开放标准和开放内容是实现可持续发展目标的关键。"
    image="/images/sdg.png"
    imageAlt="17个可持续发展目标"
    ctaButton={{
      text: "了解更多关于可持续发展目标",
      link: "https://sdgs.un.org/zh/goals",
      openInNewTab: true,
    }}
  />

  <TextAndSponsors
    title="支持组织"
    text="本次大会得到了致力于开源创新和可持续发展的领先组织的共同支持。"
    logos={[
      {
        image: "baai-logo-black.svg",
        imageAlt: "北京智源人工智能研究院标志",
      },
      {
        image: "eclipse-foundation.png",
        imageAlt: "Eclipse基金会标志",
      },
      {
        image: "linux-foundation-research.png",
        imageAlt: "Linux基金会研究标志",
      },
      {
        image: "osi.png",
        imageAlt: "开源倡议组织标志",
      },
      {
        image: "openwallet.png",
        imageAlt: "OpenWallet基金会标志",
      },
      {
        image: "sw-heritage.png",
        imageAlt: "软件遗产基金会标志",
      },
    ]}
  />

  <VenueInfo
    subtitle="会议地点"
    title="杭州白金汉爵大酒店（西湖区店）"
    location="中国杭州"
    text="杭州，这座承载着 2200 年历史的古城，曾是南宋都城，堪称中国文化艺术史上的一座丰碑。如今，这里不仅汇聚了全球顶尖的开源 AI 企业、蓬勃的 AI 创新生态与一流研究机构，更成为 GOSIM 的理想之选 —— 在此集结全球优秀开源项目，共探更广阔的全球开源合作，探寻开源技术如何切实改善人类福祉，为联合国可持续发展目标的实现贡献力量。"
    image="/images/homepage/baijing-hangjue.jpg"
    ctaButton={{
      text: "查看地图",
      link: "https://www.amap.com/place/B0IB5AHHCF",
      openInNewTab: true,
    }}
  />

  <Cards
    title="大会预期成果"
    description="我们旨在确定有影响力的合作项目，并在2026年纽约联合国总部举行的联合国OSPOS for Good大会上提交进展报告。"
    cards={[
      {
        title: "开放贡献框架",
        description:
          "建立明确的框架，指导和鼓励与联合国可持续发展目标相符的开源贡献，并为个人和组织创建有意义参与的途径。",
        image: "/icons/whitepaper.svg",
      },
      {
        title: "开放数据促进联合国可持续发展目标影响",
        description:
          "启动开放数据倡议，促进在推进联合国可持续发展目标的项目中获取和使用开放数据，实现基于证据的创新和协作。",
        image: "/icons/positionpaper.svg",
      },
      {
        title: "全球协作促进联合国可持续发展目标行动",
        description:
          "动员全球开源、标准、学术和研究社区交流想法，确定有影响力的倡议，并在直接支持联合国可持续发展目标的开放项目上进行合作。",
        image: "/icons/roadmap.svg",
      },
    ]}
  />
</Layout>
