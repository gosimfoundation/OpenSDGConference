---
// Components
import Layout from "layouts/Layout.astro";
import SchedulesCN from "components/SchedulesCN.astro";
import Cards from "components/Cards.astro";
---

<Layout
  title="议程 | 开放共创·可持续发展大会"
  description="查看开放共创·可持续发展大会的完整议程，包括关于开放数据、政策、科学和人工智能促进可持续发展的会议。"
  navDarkMode={true}
  navBackground="header-home"
  pageTransitionName="大会议程"
>
  <SchedulesCN currentDay="9月13日" activeCategory="All" />

  <Cards
    title="会议形式"
    description="每个环节都旨在最大化参与度和知识共享"
    cards={[
      {
        title: "主题演讲",
        description:
          "由领域专家进行15-20分钟的演讲，为每个主题领域设定背景",
        image: "/icons/whitepaper.svg",
      },
      {
        title: "小组讨论",
        description:
          "45分钟的主持讨论，就关键议题带来多元视角",
        image: "/icons/collaboration.svg",
      },
      {
        title: "闪电演讲",
        description:
          "10分钟的演示，展示实际应用和成功案例",
        image: "/icons/aimodels.svg",
      },
      {
        title: "交流茶歇",
        description:
          "为参与者提供结构化的交流和探索合作机会",
        image: "/icons/networking.svg",
      },
    ]}
  />
</Layout>
